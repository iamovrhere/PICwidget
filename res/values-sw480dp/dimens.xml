<resources>
	    
    <!-- Widget internal -->
    <eat-comment />
    <!-- The square dimensions of the main picture of the widget. -->
    <dimen name="com_ovrhere_picwidget_widget_img_mainPicture_width">72dp</dimen>
    
    <!-- The side padding for the internal widget. --> 
    <!-- The primary item padding for elements in the widget -->
    <dimen name="com_ovrhere_picwidget_widget_item_padding">7dp</dimen>
    
	<!-- The text size for the pic widget info. 
	Dp is used INTENTIONALLY as this is a widget; we need a constant size.
	Alternative sizes will need to supplied with dropdown eventually. -->
    <dimen name="com_ovrhere_picwidget_widget_text_info_size">14dp</dimen>
    
    <!-- limits -->
    <eat-comment/>
    
     <!-- The estimated widget text width per line minimally 
    (picture + time enabled). -->
    <dimen name="com_ovhere_picwidget_widget_infoText_width_min" 
       >190dp</dimen>
    <!-- The estimated widget text width per line middle value 
    (picture enabled only). -->
    <dimen name="com_ovhere_picwidget_widget_infoText_width_mid" 
       >200dp</dimen>
    <!-- The estimated widget text width per line max value 
    (text only). -->
    <dimen name="com_ovhere_picwidget_widget_infoText_width_max" 
       >290dp</dimen>
    
</resources>
