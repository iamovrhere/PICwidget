<resources>
    <!-- The input character limit for the info text. -->
    <item name="com_ovrhere_picwidget_activity_config_textin_info_charLimit" 
        type="integer">120</item>
    <!-- The input line limit for the info text. -->
    <item name="com_ovrhere_picwidget_activity_config_textin_info_lineLimit" 
        type="integer">5</item>
    
    <!-- The output line limit for the info text. -->
    <item name="com_ovrhere_picwidget_widget_text_mainText_lineLimit" 
        type="integer">4</item>
    
    
    <!-- Use a test set of 160 characters, and a 13 dp: 
        	-pic + clock enabled ==> 23 char per line
        	-pic + clock disabled ==> 32 char per line
        	-pic gone + clock enabled ==> 31 char per line
        	-pic gone + clock disabled ==> 42 char per line
         -->
     <eat-comment />
    <!-- The estimated widget character limit per line minimally 
    (picture + time enabled). -->
    <item name="com_ovhere_picwidget_widget_infoText_charPerLine_min" 
       type="integer">22</item>
    <!-- The estimated widget character limit per line middle value 
    (picture enabled only). -->
    <item name="com_ovhere_picwidget_widget_infoText_charPerLine_mid" 
       type="integer">30</item>
    <!-- The estimated widget character limit per line max value 
    (text only). -->
    <item name="com_ovhere_picwidget_widget_infoText_charPerLine_max" 
       type="integer">40</item>
    
</resources>
