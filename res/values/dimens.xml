<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- See: https://developer.android.com/guide/practices/ui_guidelines/widget_design.html
    on widget cells->dp sizes.    -->
    
    <!-- Widget Outer limits dimentions -->
    <eat-comment />
    
    <!-- Widget background radius. -->
    <dimen name="com_ovrhere_picwidget_widget_bg_radius">8dp</dimen>
    
    <!-- The minimum width for the pic info card widget: ~4 cells. -->
    <dimen name="com_ovrhere_picwidget_minWidth">250dp</dimen>
    <!-- The minimum height for the pic info card  widget: ~1 cell -->
    <dimen name="com_ovrhere_picwidget_minHeight">40dp</dimen>
    
    <!-- The min resize width for the pic info card widget: ~4 cells. -->
    <dimen name="com_ovrhere_picwidget_minResizeWidth">250dp</dimen>
    <!-- The min resize height for the pic info card  widget: ~1 cell -->
    <dimen name="com_ovrhere_picwidget_minResizeHeight">40dp</dimen>
    
    <!-- Widget internal -->
    <eat-comment />
    <!-- The square dimensions of the main picture of the widget. -->
    <dimen name="com_ovrhere_picwidget_widget_img_mainPicture_width">52dp</dimen>
    <!-- The clock frame width -->
    <dimen name="com_ovrhere_picwidget_widget_frame_clockWidth">72dp</dimen>
    
    <!-- The side padding for the internal widget. -->
    <dimen name="com_ovrhere_picwidget_widget_layout_sidePadding">4dp</dimen>    
    <!-- The primary item padding for elements in the widget -->
    <dimen name="com_ovrhere_picwidget_widget_item_padding">4dp</dimen>
    
	<!-- The text size for the pic widget info. 
	Dp is used INTENTIONALLY as this is a widget; we need a constant size.
	Alternative sizes will need to supplied with dropdown eventually. -->
    <dimen name="com_ovrhere_picwidget_widget_text_info_size">13dp</dimen>
    
</resources>
