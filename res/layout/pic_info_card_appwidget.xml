<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal" 
     android:background="@drawable/widget_bg_clickable"   
     android:id="@+id/com_ovrhere_picwidget_widget_layout"  
     android:baselineAligned="false"
     android:paddingLeft="@dimen/com_ovrhere_picwidget_widget_layout_sidePadding"
     android:paddingRight="@dimen/com_ovrhere_picwidget_widget_layout_sidePadding"
     >

        <!--
     Under the assumption the a cell is 40dp and it is a 
 	1x4 widget
        -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:paddingLeft="@dimen/com_ovrhere_picwidget_widget_item_padding"
        android:paddingTop="@dimen/com_ovrhere_picwidget_widget_item_padding"  
        android:paddingRight="@dimen/com_ovrhere_picwidget_widget_item_padding"      
        android:paddingBottom="0dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/com_ovrhere_picwidget_widget_layout_imgContainer"
        >
        
        <ImageView
	        android:id="@+id/com_ovrhere_picwidget_widget_img_mainPicture"
	        android:layout_width="@dimen/com_ovrhere_picwidget_widget_img_mainPicture_width"
	        android:layout_height="@dimen/com_ovrhere_picwidget_widget_img_mainPicture_width"
	        android:contentDescription="@string/com_ovrhere_picwidget_contentDescrip_mainPicture"
	        android:scaleType="centerInside"
	        android:src="@drawable/ic_no_picture"
	        />

        <TextView
            android:id="@+id/com_ovrhere_picwidget_widget_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/com_ovrhere_picwidget_widget_img_mainPicture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"
            android:text="@string/com_ovrhere_picwidget_button_edit"
            android:textColor="@color/com_ovrhere_picwidget_white_translucent"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

    </RelativeLayout>

    
    <!-- <AdapterViewFlipper 
        android:id="@+id/com_ovrhere_picwidget_widget_viewAnimator_mainText"
        
        android:autoStart="true"
        android:flipInterval="5000"
        android:inAnimation="@android:anim/cycle_interpolator"
        android:outAnimation="@android:anim/fade_out"
        android:loopViews="true"
        android:layoutAnimation="@android:anim/fade_in"
        
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        
        android:layout_weight="1"
        android:padding="@dimen/com_ovrhere_picwidget_widget_item_padding"
        /> -->
        <!-- Test set of 160 characters, 
        we use dp as it is a widget who needs constant size:
        At 14dp: 
        	-pic + clock enabled ==> 16 char per line
        	-pic + clock disabled ==> 27 char per line
        	-pic gone + clock enabled ==> 26 char per line
        	-pic gone + clock disabled ==> 37 char per line
         -->
        <TextView
            android:id="@+id/com_ovrhere_picwidget_widget_text_mainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:maxLines="@integer/com_ovrhere_picwidget_widget_text_mainText_lineLimit"
            
            android:padding="@dimen/com_ovrhere_picwidget_widget_item_padding"
        
            android:text="1234567890abcdefghij1234567890abcdefghij1234567890abcdefghij1234567890abcdefghij1234567890abcdefghij1234567890abcdefghij1234567890abcdefghij1234567890abcdefghij"
            android:textColor="@color/com_ovrhere_picwidget_white"
            android:textSize="@dimen/com_ovrhere_picwidget_widget_text_info_size"
            tools:ignore="HardcodedText" />
        
    <FrameLayout
        android:id="@+id/com_ovrhere_picwidget_widget_frame_clock"
        android:layout_width="@dimen/com_ovrhere_picwidget_widget_frame_clockWidth"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/com_ovrhere_picwidget_widget_item_padding"
        >

        <AnalogClock
            android:id="@+id/com_ovrhere_picwidget_widget_analogClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>
